<div class='main-section'>
  <div class='container'>
    <ul class='movies-grid'>
      {{#each this}}
        <li data-press='movie' class='movie' id='{{id}}'>
          <img class='movie__poster' src='{{imageUrl}}' />
          <p class='movie-title'>
            {{title}}
          </p>
          <p class='movie-genres'>{{genreNames}}<span>
              |
              {{release_date}}</span></p>
        </li>
      {{/each}}
    </ul>
  </div>
</div>